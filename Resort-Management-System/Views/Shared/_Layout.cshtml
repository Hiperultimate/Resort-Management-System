<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Styles/StyleSheetCommon.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="container">
            <div class="branding">
                <h1><span class="highlight">Flying </span>Fox Resort</h1>
            </div>
            <div class="navbar">
                @if ((string)Session["roleName"] == "Admin")
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Employee", "Index", "EmployeeMasters", null, new { @class = "NavStyle" })</li>
                        <li>@Html.ActionLink("Roles", "Index", "RolesMasters", null, new { @class = "NavStyle" })</li>
                        <li>@Html.ActionLink("Rooms", "Index", "RoomMasters", null, new { @class = "NavStyle" })</li>
                        <li>@Html.ActionLink("Facility", "Index", "FacilityAmenityTrans", null, new { @class = "NavStyle" })</li>
                        <li>@Html.ActionLink("Amenity", "Index", "AmenitiesMasters", null, new { @class = "NavStyle" })</li>
                    </ul>
                }
            </div>
        </div>
        <div class="logout">
            @if (Session["roleName"] != null)
            {

                <input type="button" class="button1" value="Log Out" onclick="location.href='@Url.Action("Logout", "EmployeeMasters")'" />
                @*<a href="/EmployeeMasters/Logout">Log out</a>*@
            }
        </div>
    </header>

    <div class="containerBody-content">
        @RenderBody()
        @*<hr />
            <footer>
                <p>Resort Management System&copy;</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
